<%- include('header') %>

<div class="ui grid">
    <div class="four wide column">
        <a class="avatar"
           href="/posts?author=<%= author._id %>"
           data-title="<%= author.name %> | <%= ({m: '男', f: '女', x: '保密'})[author.gender] %>"
           data-content="<%= author.bio %>">
            <img class="avatar" src="/img/<%= author.avatar %>">
        </a>
    </div>

    <div class="eight wide column">
        <form class="ui form segment" method="post" action="/posts/<%= _id %>/edit">
            <div class="field required">
                <label>标题</label>
                <input type="text" name="title" value="<%= title %>">
            </div>
            <div class="field required">
                <label>内容</label>
                <textarea name="content" rows="15"><%= content %></textarea>
            </div>
            <input type="submit" class="ui button" value="发布">
        </form>
    </div>
</div>

<%- include('footer') %>